@model IEnumerable<SMS.BOL.StudentInfo>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">List of Student</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.RollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade.ClassName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FatherName)
        </td>
        <td>
            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DOB))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.RollNo)
        </td>
        <td>
            <img src="../../Images/@(item.Id.ToString()+"_"+item.Image)" width="100px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade.ClassName)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-info glyphicon glyphicon-edit" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
            @Html.ActionLink("Payment Details", "PaymentDetailsByStudent", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
        </td>
    </tr>
}

</table>
