@model IEnumerable<SMS.BOL.Grade>

@{
    ViewBag.Title = "GetClass";
}

<h2 class="text-center">List of Attendance Sheet</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>
            @Html.ActionLink("Show Attendance", "CreateAttendance", new { id=item.Id })
        </td>
    </tr>
}

</table>
